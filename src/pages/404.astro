---
import Layout from '@/layouts/Layout.astro';
import { IconArrowLeft } from '@tabler/icons-react';
---

<Layout title="404 - Página no encontrada">
    <main class="flex flex-col w-full h-full items-center justify-center gap-16 py-20 text-center">
        <div class="flex flex-col items-center justify-center gap-4 text-center">
           <h1 class="text-9xl font-bold">404</h1>
            <p class="font-medium text-2xl text-stone-400">La página que buscas no existe</p>
        </div>
        <a href="/" class="flex flex-row bg-accent text-accent-foreground px-2 py-1 rounded-md text-lg gap-2 items-center">
            <IconArrowLeft className="inline-block" />
            Volver al inicio
        </a>
    </main>
</Layout>