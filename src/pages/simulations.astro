---
import Layout from '@/layouts/Layout.astro';
import FilterForm from '@/components/simulations-searching-page/FilterForm';
import CategoriesAccordion from '@/components/simulations-searching-page/CategoriesAccordion.astro';
import { getCollection } from 'astro:content';
const simulations = await getCollection('simulationsDescription');
---
<Layout>
    <article class="flex flex-row w-full h-full">
       <CategoriesAccordion />
       <FilterForm data={simulations} client:load />
    </article>
</Layout>