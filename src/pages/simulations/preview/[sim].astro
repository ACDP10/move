---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const simulationsComponents = await getCollection('simulationsComponent');
  const simulations = await getCollection('simulationsDescription');
  console.log(simulationsComponents);
  return simulations.map((simulation) => ({
    params: { sim: simulation.slug },
    props: { 
      simulation: simulation,
      isAviable: simulationsComponents.find(component => component.slug === simulation.slug) !== undefined
    },
  }));
}

const { simulation, isAviable } = Astro.props;
const { Content } = await simulation.render();
---

<Layout title={simulation.data.name} >
  <section class="w-full h-[calc(100vh-76px)] overflow-hidden p-16">
    <div class="grid grid-cols-2 gap-4 w-full h-full">
      <div class="prose prose-invert overflow-scroll">
        <h1>{simulation.data.name}</h1>
        <Content />
      </div>
      <div class="flex flex-col">
        <div class="aspect-video bg-stone-900 rounded-md">
          <img src="https://images.unsplash.com/photo-1635070041078-e363dbe005cb?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt={simulation.data.name} />
        </div>
        <div class="flex flex-row items-center justify-center p-4">
          <a
            href={isAviable ? `/simulations/play/${simulation.slug}/` : undefined}
            aria-disabled={!isAviable}
            class={`bg-stone-950 border border-stone-800 hover:bg-stone-900 rounded-md px-3 py-2 text-center transition ${
              !isAviable ? 'pointer-events-none opacity-50 cursor-not-allowed' : ''
            }`}
          >
            {isAviable ? 'Iniciar simulación' : 'Aún no disponible'}
          </a>

        </div>
      </div>
    </div>
  </section>
</Layout>